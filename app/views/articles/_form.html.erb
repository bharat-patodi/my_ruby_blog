
<% if @article.errors.any? %>
    <div class = "row">
        <div class = "col-xs-8 col-xs-offset-2">
            <div class = "my-panel">
                <div class = "panel-title">
                    <h3>Errors:</h3>
                </div>
                <div class = "panel-body">
                    <ul>
                        <% @article.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
<% end %>

<div class = "row">
    <div class = "col-sm-12">
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class = "form-group">
                <div class = "control-label col-sm-2">
                    <strong><%= f.label :title %></strong>
                </div>
                <div class = "col-sm-10">
                    <%= f.text_field :title, class: "form-control", placeholder: "Article Title", autofocus: true %>
                </div>
            </div>

            <div class = "form-group">
                <div class = "control-label col-sm-2">
                    <strong><%= f.label :description %></strong>
                </div>
                <div class = "col-sm-10">
                    <%= f.text_area :description, rows: 6, class: "form-control", placeholder: "Article Body" %>
                </div>
            </div>

            <div class = "form-group">
                <div class = "col-sm-10">
                    <%= f.submit class: "btn btn-primary btn-lg " %>
                </div>
            </div>
        <% end %>
    </div>
</div>

<div class = "col-xs-4 col-xs-offset-4">
    <%= link_to "Cancel and return to articles listing", articles_path %>
</div>
</div>
</div>